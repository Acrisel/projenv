<?xml version="1.0" ?>

<environment>
  <environ>
    <import name='PENV1' path='' comment='Import local penv1 sandbox'/>
    
    <var name='PROJ_PREFIX' value='PENV2_' export='True'/>
    <var name='PENV2_PROJ_NAME' value='penv2' export='True'/>
    <var name='PENV2_PROJ_VER' value='0.1.0' export='True'/>
    <var name='PENV2_PROJ_LOC' value='' export='True' virtual='True' override='True'/>
    <var name='PENV2_PROJ_API_LOC' value='${PENV2_PROJ_LOC}api/' export='True'/>
    <var name='PENV2_PROJ_DB_LOC' value='${PENV2_PROJ_LOC}db/' export='True'/>
    <var name='PENV2_PROJ_SRC_LOC' value='${PENV2_PROJ_LOC}src/' export='True'/>
    <var name='PENV2_PROJ_FMT_LOC' value='${PENV2_PROJ_LOC}fmt/' export='True'/>
    <var name='PENV2_PROJ_RES_LOC' value='${PENV2_PROJ_LOC}res/' export='True'/>
    <var name='PENV2_PROJ_CFG_LOC' value='${PENV2_PROJ_LOC}cfg/' export='True'/>
    <var name='PENV2_PROJ_DATA_LOC' value='${PENV2_PROJ_LOC}data/' export='True'/>
    
    <var name='PENV2_ENCODING' value='ascii' export='True'/>
    <var name='PENV2_BYTEORDER' value='network' export='True'/>
    
    <var name='PENV2_VS_LOC' value='/Users/arnon/var/data/penv2/' override='True' export='True'/>
    <var name='PENV2_ENV_NAME' value='.' override='True' export='True'/>
    <var name='PENV2_VAR_LOC' value='${PENV2_VS_LOC}${PENV2_PROJ_NAME}/${ENV_NAME}/' override='True' export='True'/>
    <var name='PENV2_LOG_LOC' value='${PENV2_VAR_LOC}log/' override='True' export='True'/>
    <var name='PENV2_REJ_LOC' value='${PENV2_VAR_LOC}rej/' override='True' export='True'/>
    <var name='PENV2_RUN_LOC' value='${PENV2_VAR_LOC}run/' override='True' export='True'/>
    <var name='PENV2_IN_LOC' value='${PENV2_VAR_LOC}in/' override='True' export='True'/>
    <var name='PENV2_OUT_LOC' value='${PENV2_VAR_LOC}out/' override='True' export='True'/>
    <var name='PENV2_DB_LOC' value='${PENV2_VAR_LOC}db/' override='True' export='True'/>
    <var name='PENV2_LKUP_LOC' value='${PENV2_VAR_LOC}lkup/' override='True' export='True'/>
    <var name='PENV2_TMP_LOC' value='${PENV2_VAR_LOC}tmp/' override='True' export='True'/>
    
    <!-- Logging controls -->
    <var name='PENV2_LOG_LEVEL' value='DEBUG' override='True' export='True'/>
    <var name='PENV2_LOG_STDOUT' value='False' override='True' export='True' cast='boolean'/>
    <var name='PENV2_LOG_STDOUT_LEVEL' value='INFO' override='True' export='True'/>
    <var name='PENV2_LOG_STDERR' value='True' override='True' export='True' cast='boolean'/>
    <var name='PENV2_LOG_STDERR_LEVEL' value='WARNING' override='True' export='True'/>
    
  </environ>
</environment>